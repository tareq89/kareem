<h1>Wanna create new company ???</h1>
<ul>
	<%= form_for @new_company do |f| %>
		<li>
			<%= f.label "কোম্পানি নাম" %>
			<%= f.text_field :name, placeholder: "কোম্পানি নাম" %> 
		</li>
		<li>
			<%= f.label "ঠিকানা" %>
			<%= f.text_area :address , placeholder: "ঠিকানা" %> 
		</li>
		<li>
			<%= f.label "ফোন" %>
			<%= f.text_field :phone , placeholder: "ফোন" %> 
		</li>
		<li>
			<%= f.label "ক্রেতা ?" %>
			<%= f.check_box :buyer %> 
		</li>
		<li>
			<%= f.label "বিক্রেতা ?" %>
			<%= f.check_box :seller %> 
		</li>
	<%= f.submit  %> 
	<% end %>	
</ul>




